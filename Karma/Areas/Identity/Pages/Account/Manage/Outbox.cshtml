@page
@model Karma.Areas.Identity.Pages.Account.OutboxModel
@{
    
}

@if (Model.Outbox.Count != 0)
{
    foreach(var message in Model.Outbox)
    {
        <div class="card message-card mt-2 rounded-0">
            <div class="card-header card-header-custom">
                <p class="m-0 text-muted">To @message.ToEmail</p>
            </div>
            <div class="card-body">
                @message.Content
            </div>
        </div>
    }
}else{
    <h1>No messages</h1>
}