@page
@model Karma.Pages.SubmitsModel
@{
    ViewData["Title"] = "Submit Items";
}

<h1>@ViewData["Title"]</h1>

<!--do some research about this enctype thingie-->

<form method="post" enctype="multipart/form-data">

    <button type="button" class="btn btn-primary mt-3" data-toggle="collapse" data-target="#demo">Submit an item</button>
    <div id="demo" class="collapse">

        <div class="mb-3">
            <label class="form-label">Item name</label>
            <input type="text" class="form-control" asp-for="Item.Title">
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea type="text" class="form-control" rows="3" asp-for="Item.Description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Your name</label>
            <input type="text" class="form-control" asp-for="Item.PosterName">
        </div>
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="Item.City">
        </div>
        <div class="mb-3">
            <label class="form-label">Phone number</label>
            <input type="text" class="form-control" asp-for="Item.PhoneNumber">
        </div>
        <div class="mb-3">
            <label class="form-label">Picture</label>
            <input class="form-control" type="file" asp-for="Photo">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

        
    </div>

</form>

<!--Generates submits from .json file-->
<div class="list-group mt-4">
    @{
        for (int i = Model.Submits.Count() - 1; i >= 0; i--)
        { 
        <a asp-page="/Item" asp-route-itemJson=@Model.Submits.ElementAt(i) class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1">@Model.Submits.ElementAt(i).Title</h5>
                <small>@Model.Submits.ElementAt(i).PosterName</small>
            </div>
            <p class="mb-1">@Model.Submits.ElementAt(i).Description</p>
            <small>@Model.Submits.ElementAt(i).City,</small>
            <small>@Model.Submits.ElementAt(i).PhoneNumber</small>

            <div class="col-lg-1">
                <form asp-page-handler="delete" asp-route-id="@i" method="post">
                    <button class="btn btn-default" >Delete</button>
                </form>
            </div>
        </a>
        }
    }
</div>

