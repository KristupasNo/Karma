@page
@model Karma.Pages.RequestsModel
@{
    ViewData["Title"] = "Request Items";
}

<h1>@ViewData["Title"]</h1>

<!--Form for a new request-->
<form method="post">
    <button type="button" class="btn btn-primary mt-3" data-toggle="collapse" data-target="#demo">Request an item</button>
    <div id="demo" class="collapse">
        <div class="mb-3">
            <label class="form-label">Item name</label>
            <input type="text" class="form-control" asp-for="Item.Title">
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea type="text" class="form-control" rows="3" asp-for="Item.Description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Your name</label>
            <input type="text" class="form-control" asp-for="Item.PosterName">
        </div>
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="Item.City">
        </div>
        <div class="mb-3">
            <label class="form-label">Phone number</label>
            <input type="text" class="form-control" asp-for="Item.PhoneNumber">
        </div>

        <button type="submit" class="btn btn-primary">Request</button>
    </div>
</form>

<!--Generates requests from .json file, not very elegant code-->
<div class="list-group mt-4">
    @{
        for (int i = Model.Requests.Count() - 1; i >= 0; i--)
        {
            <a href="#" class="list-group-item list-group-item-action">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@Model.Requests.ElementAt(i).Title</h5>
                    <small>@Model.Requests.ElementAt(i).PosterName</small>
                </div>
                <p class="mb-1">@Model.Requests.ElementAt(i).Description</p>
                <small>@Model.Requests.ElementAt(i).City,</small>
                <small>@Model.Requests.ElementAt(i).PhoneNumber</small>
            </a>
        }
    }
</div>


