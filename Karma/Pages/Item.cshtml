@page "/Submits/Item/{id}"
@model ItemModel
@{ ViewData["Title"] = "Item"; }


<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-md p-0">
            <img src="/images/@Model.Item.Picture" asp-append-version=true class="figure-img img-fluid mb-0 rounded">
        </div>
        <div class="col-md p-0">

            <div class="card h-100">
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title">@Model.Item.Title</h2>
                    <h6 class="card-subtitle mb-2 text-muted">@Model.Item.City</h6>
                    <p class="card-text">@Model.Item.Description</p>
                    <h6 class="card-text text-muted mt-auto">@Model.Item.PosterName</h6>
                    <h6 class="card-text text-muted">+@Model.Item.PhoneNumber</h6>
                    </div>



                        

            <!--
            <a class="btn btn-primary w-50" href="">@Model.Item.PhoneNumber</a>
            <h1 class="mb-0">@Model.Item.Title</h1>
            <small class="mb-2">@Model.Item.City</small>
            <h5>
                @Model.Item.Description

            </h5>-->
        </div>
    </div>
</div>

<form asp-page-handler="edit" method="post" enctype="multipart/form-data" class="mt-4">

    <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
        Edit item
    </button>
    <div id="collapseExample" class="collapse">

        <div class="mb-3">
            <label class="form-label">Item name</label>
            <input type="text" class="form-control" asp-for="NewItem.Title">
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea type="text" class="form-control" rows="3" asp-for="NewItem.Description"></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Your name</label>
            <input type="text" class="form-control" asp-for="NewItem.PosterName">
        </div>
        <div class="mb-3">
            <label class="form-label">City</label>
            <input type="text" class="form-control" asp-for="NewItem.City">
        </div>
        <div class="mb-3">
            <label class="form-label">Phone number</label>
            <input type="text" class="form-control" asp-for="NewItem.PhoneNumber">
        </div>
        <div class="mb-3">
            <label class="form-label">Picture</label>
            <input class="form-control" type="file" asp-for="NewPhoto">
        </div>

        <button type="submit" class="btn btn-primary">Edit</button>
        
    </div>

</form>

